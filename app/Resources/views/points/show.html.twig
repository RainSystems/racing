{% extends 'base.html.twig' %}

{% block body %}
    <h1>Points</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ point.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ point.title }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ point.year }}</td>
            </tr>
            <tr>
                <th>Tworace</th>
                <td>{{ point.twoRace }}</td>
            </tr>
            <tr>
                <th>Threerace</th>
                <td>{{ point.threeRace }}</td>
            </tr>
            <tr>
                <th>Fourrace</th>
                <td>{{ point.fourRace }}</td>
            </tr>
            <tr>
                <th>Specificpoints</th>
                <td>{{ point.specificPoints }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('points_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('points_edit', { 'id': point.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
