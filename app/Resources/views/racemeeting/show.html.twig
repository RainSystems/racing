{% extends 'base.html.twig' %}

{% block body %}
    <h1>RaceMeeting</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ raceMeeting.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ raceMeeting.name }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ raceMeeting.url }}</td>
            </tr>
            <tr>
                <th>Round</th>
                <td>{{ raceMeeting.round }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ raceMeeting.year }}</td>
            </tr>
            <tr>
                <th>Races</th>
                <td>{{ raceMeeting.races }}</td>
            </tr>
            <tr>
                <th>Datestart</th>
                <td>{% if raceMeeting.dateStart %}{{ raceMeeting.dateStart|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dateend</th>
                <td>{% if raceMeeting.dateEnd %}{{ raceMeeting.dateEnd|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('event_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('event_edit', { 'id': raceMeeting.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
