{% extends 'base.html.twig' %}

{% block body %}
    <h1>Race</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ race.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ race.title }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ race.url }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ race.type }}</td>
            </tr>
            <tr>
                <th>Racedate</th>
                <td>{% if race.raceDate %}{{ race.raceDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('race_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('race_edit', { 'id': race.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
