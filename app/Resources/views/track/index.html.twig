{% extends 'base.html.twig' %}

{% block body %}
    <h1>Track list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>Image</th>
                <th>Length</th>
                <th>Direction</th>
                <th>Maxspeed</th>
                <th>Minspeed</th>
                <th>Laprecord</th>
                <th>Mapurl</th>
                <th>City</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for track in tracks %}
            <tr>
                <td><a href="{{ path('track_show', { 'id': track.id }) }}">{{ track.id }}</a></td>
                <td>{{ track.name }}</td>
                <td>{{ track.url }}</td>
                <td>{{ track.image }}</td>
                <td>{{ track.length }}</td>
                <td>{{ track.direction }}</td>
                <td>{{ track.maxSpeed }}</td>
                <td>{{ track.minSpeed }}</td>
                <td>{{ track.lapRecord }}</td>
                <td>{{ track.mapUrl }}</td>
                <td>{{ track.city }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('track_show', { 'id': track.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('track_edit', { 'id': track.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('track_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
